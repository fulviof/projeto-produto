<script src="/js/Produto/listar.js"></script>

<div>
    <h1>Produtos</h1>
    <div>
        <% if(usuarioLogado.perId == 1) { %>
            <a href="/produto/cadastro" class="btn btn-primary"><i class="fas fa-plus"></i> Cadastrar</a>
        <% } %>
    </div>
    <div class="table-responsive" style="margin-top: 15px;">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Código</th>
                    <th>Nome</th>
                    <th>Quantidade</th>
                    <th>Categoria</th>
                    <th>Marca</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                <% lista.map(function(value, index) { %>
                    <tr>
                        <td><img width="100" src="<%= value.produtoImagem %>" alt="Imagem do produto" /></td>
                        <td><%= value.produtoCodigo %></td>
                        <td><%= value.produtoNome %></td>
                        <td><%= value.produtoQuantidade %></td>
                        <td><%= value.categoriaNome %></td>
                        <td><%= value.marcaNome %></td>                   
                        <td>
                            <div>
                                <a href="/produto/alterar/<%= value.produtoId %>" class="btn btn-primary"> <i class="fas fa-pen"></i></a>
                                <button data-codigo="<%=value.produtoId %>" class="btn btn-danger btnExcluir"><i class="fas fa-trash"></i></button>
                            </div>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</div>

