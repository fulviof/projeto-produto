<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <meta name="description" content="" />
        <meta name="author" content="" />
        <title>Lojinha Fullstack</title>
          <!-- Font Awesome -->
  <link href="/css/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
        <!-- Bootstrap icons-->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
        <!-- Core theme CSS (includes Bootstrap)-->
        <link href="css/Loja/styles.css" rel="stylesheet" />
    </head>
    <body>
        <!-- Navigation-->
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container px-4 px-lg-5">
                <a class="navbar-brand" href="#!">PFS I</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <form class="d-flex">
                        <button type="button" data-bs-toggle="modal" data-bs-target="#modalCarrinho" id="btnAbrirModal" class="btn btn-outline-dark">
                            <i class="bi-cart-fill me-1"></i>
                            Carrinho
                            <span id="contadorCarrinho" class="badge bg-dark text-white ms-1 rounded-pill">0</span>
                        </button>
                        <a class="btn btn-outline-dark" href="/home">Acessar área administrativa</a>
                    </form>
                </div>
            </div>
        </nav>
        <!-- Header-->
        <header class="bg-dark py-5">
            <div class="container px-4 px-lg-5 my-5">
                <div class="text-center text-white">
                    <h1 class="display-4 fw-bolder">Lojinha Fullstack</h1>
                    <p class="lead fw-normal text-white-50 mb-0">Alteração publicada automaticamente!!!</p>
                    <div><%= msg %></div>
                </div>
            </div>
        </header>
        <!-- Section-->
        <section class="py-5">
            <div class="container px-4 px-lg-5 mt-5">
                <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                    <% listaProdutos.map(function(value, index) { %>
                        <div class="col mb-5">
                            <div class="card h-100">
                                <!-- Product image-->
                                <img class="card-img-top" height="275" src="<%= value.produtoImagem %>" alt="Produto Imagem" />
                                <!-- Product details-->
                                <div class="card-body p-4">
                                    <div class="text-center">
                                        <!-- Product name-->
                                        <h5 class="fw-bolder"><%= value.produtoNome %></h5>
                                        <div>
                                            <span class="badge bg-primary"><%= value.categoriaNome %></span>
                                            <span class="badge bg-info text-dark"><%= value.marcaNome %></span>
                                        </div>
                                        <!-- Product price-->
                                        R$<%= value.produtoPreco %>
                                    </div>
                                </div>
                                <!-- Product actions-->
                                <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                    <div class="text-center"><button data-id="<%= value.produtoId %>" class="btn btn-outline-dark mt-auto addCarrinho"><i class="fas fa-shopping-cart"></i> Adicionar ao carrinho</button></div>
                                </div>
                            </div>
                        </div>
                    <%}) %>
                </div>
            </div>

        <div id="modalCarrinho" class="modal fade modal-lg" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title"><i class="fas fa-shopping-cart"></i> Carrinho de compras</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body table-responsive" id="corpoCarrinho">
                            
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
                            <button id="btnGravarPedido" type="button" class="btn btn-primary">Realizar pedido</button>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- Footer-->
        <footer class="py-5 bg-dark">
            <div class="container"><p class="m-0 text-center text-white">Copyright &copy; Lojinha Fullstack 2023</p></div>
        </footer>
        <!-- Bootstrap core JS-->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
        <!-- Core theme JS-->
        <script src="js/Loja/scripts.js"></script>
        <script src="js/Loja/carrinho.js"></script>
    </body>
</html>
